- @page_name = "legislator"
- @btn_loadmore_status = "loading"

.breadcrumb
  .breadcrumb-inner
    ol.breadcrumb-list
      li: a href="/" 首頁
      li: a href="/legislators/" 立委線上
    = render "/partials/search"

.container.lead
  .nav-select
    .select-label 委員會分類
    select
      option 最新更新
      - 11.times do
        option #{zh_lorem_words(3+rand(5))}委員會
  .legislator-list
    = render "/partials/legislators/legislators-list"
  form
    - if @btn_loadmore_status == "normal"
      input.btn_loadmore type="submit" value="看更多"
    - if @btn_loadmore_status == "loading"
      input.btn_loadmore.loading type="submit" value="讀取中"